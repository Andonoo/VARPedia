<AnchorPane prefHeight="600.0" prefWidth="1000.0" stylesheets="@../styles/style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wikiSpeakController.GameStageController">
   <children>
      <Pane prefHeight="200.0" prefWidth="1000.0">
         <children>
            <Label layoutX="419.0" layoutY="55.0" text="Game Round" textFill="WHITE">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
         </children>
         <styleClass>
            <String fx:value="primaryColorBackground" />
            <String fx:value="lightShadow" />
         </styleClass>
      </Pane>
      <Pane fx:id="_videoPane" layoutX="241.0" layoutY="62.0" prefHeight="477.0" prefWidth="503.0">
         <children>
            <MediaView fx:id="_videoDisplay" fitHeight="360.0" fitWidth="480.0" layoutX="14.0" layoutY="25.0" nodeOrientation="INHERIT" />
            <Slider fx:id="_playSlider" layoutX="73.0" layoutY="414.0" prefHeight="15.0" prefWidth="419.0" />
            <JFXButton fx:id="_playButton" layoutX="12.0" layoutY="400.0" mnemonicParsing="false" onAction="#handlePlay" prefHeight="43.0" prefWidth="33.0" text=" ">
               <graphic>
                  <ImageView fitHeight="35.0" fitWidth="35.0">
                     <image>
                        <Image url="@../../res/Images/play.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
         </children>
      </Pane>
      <TextField fx:id="_guessTF" layoutX="361.0" layoutY="517.0" prefHeight="43.0" prefWidth="157.0" promptText="Your guess..." />
      <JFXButton layoutX="538.0" layoutY="516.0" mnemonicParsing="false" onAction="#guessBtnClicked" prefHeight="43.0" prefWidth="100.0" styleClass="primaryColorBackground" text="Guess" textFill="WHITE">
         <font>
            <Font size="18.0" />
         </font></JFXButton>
      <Pane fx:id="_textPane" layoutX="260.0" layoutY="120.0" prefHeight="304.0" prefWidth="480.0">
         <children>
            <TextArea fx:id="_guessTA" prefHeight="304.0" prefWidth="480.0" wrapText="true" />
         </children>
      </Pane>
      <Pane fx:id="_audioPane" layoutX="400.0" layoutY="180.0" prefHeight="200.0" prefWidth="200.0" visible="false">
         <children>
            <ImageView fitHeight="200.0" fitWidth="200.0" layoutX="-2.0">
               <image>
                  <Image url="@../../res/Images/listen.png" />
               </image>
            </ImageView>
         </children>
      </Pane>
      <JFXButton fx:id="_homeButton" layoutX="14.0" layoutY="533.0" mnemonicParsing="false" onAction="#onHomeBtnClicked" prefHeight="54.0" prefWidth="146.0" styleClass="primaryColorBackground" text="Home" textFill="WHITE">
         <graphic>
            <ImageView fitHeight="42.0" fitWidth="42.0">
               <image>
                  <Image url="@../../res/Images/house.png" />
               </image>
            </ImageView>
         </graphic>
         <font>
            <Font size="18.0" />
         </font>
      </JFXButton>
   </children>
</AnchorPane>
